<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="30dp">

    <TextView
        android:id="@+id/textPatientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/light_black"
        android:text="Patient name"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/textSetName2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/light_black"
        android:gravity="center"
        android:text="set name"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/textDate2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/light_black"
        android:gravity="center"
        android:text="start date"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/textTime3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/light_black"
        android:gravity="center"
        android:text="time"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/textTitleEp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="exercises performed:"
        android:textSize="18sp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_ep"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/list_row_exercise_performed" />
</LinearLayout>