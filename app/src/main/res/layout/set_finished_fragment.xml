<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/textCongratulations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="30sp"
        android:text="WELL DONE, CONGRATULATIONS!" />

    <TextView
        android:id="@+id/textSetName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:text="name" />

    <TextView
        android:id="@+id/textTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:text="time" />

    <Button
        android:id="@+id/buttonNextWorkout"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="NEXT WORKOUT" />

    <Button
        android:id="@+id/buttonProgress"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="SHOW PROGRESS" />
</LinearLayout>